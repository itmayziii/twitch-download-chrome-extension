{
  "manifest_version": 3,
  "name": "Twitch Download",
  "description": "Download media from Twitch.",
  "version": "1.1.1",
  "icons": {
    "16": "images/joystick-16.png",
    "32": "images/joystick-32.png",
    "48": "images/joystick-48.png",
    "128": "images/joystick-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "dist/content.js"
      ],
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "run_at": "document_idle"
    }
  ]
}
